%div.flash__box
  %h1 グループを作成しました

%div.wrapper
  %div.side
    %div.side__header
      %div.side__header__box
        %p.side__header__box--username みる
        %ul.side__header__box--menu
          %li
            %a
              %i.fa.fa-edit
          %li
            %a
              %i.fa.fa-cog
    %div.groups
      %div.group
        %p.group__name みんなで遊ぶ会
        %p.group__message 今年もよろしく

  %div.main
    %div.main__header
      %div.main__header__box
        %h2 みんなで遊ぶ会
        %h4 Member: みる
      %a
        %div.main__header__edit Edit

    = render partial: "messeg"

    %div.form
      %form.form__message(action="./filesend.cgi" method="post" enctype="multipart/form-data")
        %div.form__message__inputbox
          %input.form__message__inputbox__text(placeholder="type a message" type="text")
          %label.form__message__inputbox__image
            %i.fa.fa-image
            %input.form__message__inputbox__image__file(type="file" name="message[image]")

        %input.submit__btn(type="submit" name="commit" value="Send" data-disable-with="Send")

