%div.flash__box
  %h1 グループを作成しました

%div.wrapper
  %div.side
    %div.side__header
      %div.side__header__box
        %p.side__header__box__username みる
        %ul.side__header__box__menu
          %li.side__header__box__menu__edit-user
            %a
              %i.fa.fa-edit
          %li.side__header__box__menu__new-group
            %a
              %i.fa.fa-cog
    %div.groups
      %div.group
        %p.group__name みんなで遊ぶ会
        %p.group__message 今年もよろしく

  %div.main
    %div.main__header
      %div.main__header__box
        %h2 みんなで遊ぶ会
        %h4 Member: みる
      %a
        %div.main__header__edit Edit

    = render partial: "messeg"

    %div.form
      %form#new_message.new_message(action="./filesend.cgi" method="post" enctype="multipart/form-data")
        %div.input-box
          %input.input-box__text#message_content(placeholder="type a message" type="text")
          %label.input-box__image
            %i.fa.fa-image
            %input.input-box__image__file#message_image(type="file" name="message[image]")

        %input(type="submit" name="commit" value="Send" class="submit-btn" data-disable-with="Send")

